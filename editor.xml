<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="15" />
    <option name="FONT_SCALE" value="1.25" />
  </component>
  <component name="EditorSettings">
    <option name="USE_SOFT_WRAPS" value="" />
    <option name="IS_ENSURE_NEWLINE_AT_EOF" value="true" />
  </component>
  <component name="TodoConfiguration">
    <pattern pattern="\btodo\b.*" />
    <pattern pattern="\bfixme\b.*" />
    <pattern icon="question" useCustomColors="true" pattern="\btodo\b.*PAP">
      <option name="FOREGROUND" value="b8c0" />
      <option name="FONT_TYPE" value="2" />
      <option name="ERROR_STRIPE_COLOR" value="bd0cc0" />
    </pattern>
    <pattern pattern="\btodo\b:^[PAP]" />
    <filter name="Mine">
      <pattern index="2" />
    </filter>
    <filter name="Not me">
      <pattern index="3" />
    </filter>
  </component>
</application>